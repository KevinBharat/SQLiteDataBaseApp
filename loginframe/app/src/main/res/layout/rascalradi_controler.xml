<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8E1D4D4">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        >

        <TextView
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:background="#F6EA7A"
            android:padding="15dp"
            android:text="SHUFFLE"
            android:textAlignment="center"
            android:textColor="#FF0303"
            android:textSize="15sp"
            android:textStyle="bold|normal" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        >

        <RelativeLayout
            android:id="@+id/lay_rel"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/btn_bg_radio">

            <android.widget.ImageButton
                android:id="@+id/btn_radio1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/btn_bg_rr"
                android:padding="16dp"
                android:src="@drawable/ic_baseline_thumb_up_24" />

            <android.widget.ImageButton
                android:id="@+id/btn_radio2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/btn_bg_rr"
                android:padding="16dp"
                android:src="@drawable/ic_baseline_fast_forward_24" />
        </RelativeLayout>

        <android.widget.ImageButton
            android:id="@+id/btn_radio3"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="-73dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/bg_payl"
            android:padding="16dp" />
        <android.widget.ImageButton
            android:id="@+id/btn_radio4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="-85dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/btn_bg_rr"
            android:padding="16dp"
            android:src="@drawable/ic_baseline_pause_circle_outline_24" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_marginTop="20dp"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="200dp"
            android:layout_height="10dp"
            android:background="@color/black"
            android:padding="10dp"
            />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="00:03"
    android:layout_marginStart="-125dp"
    android:layout_marginTop="-15dp"
    android:textColor="@android:color/holo_red_dark"
    />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20:00"
            android:layout_marginStart="122dp"
            android:layout_marginTop="-20dp"
            android:textColor="@android:color/black"
            />
    </LinearLayout>
</LinearLayout>